generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  address   String
  name      String
  password  String 
  role      Role        @default(USER)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  store     Store?      @relation("userStore")   // opposite relation
  ratings   Rating[]    @relation("userRating")
}

model Store {
  id        String      @id @default(cuid())
  name      String
  address   String
  email     String       @unique
  userId    String?      // FK to User.id
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  owner     User?        @relation("userStore", fields: [userId], references: [id])  
  ratings   Rating[]     @relation("storeRating")

  @@unique([userId])      
}

model Rating {
  id        String      @id @default(cuid())
  value     Int
  userId    String
  storeId   String

  user      User     @relation("userRating", fields: [userId], references: [id])
  store     Store    @relation("storeRating", fields: [storeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, storeId])
}

enum Role {
  ADMIN
  USER
  STORE_OWNER
}
