generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  email     String   @unique
  password  String
  address   String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //realtion 
  store     Store? @relation("userStore")
  ratings    Rating[] @relation("userRating")
}
model Store{
  id        String      @id @default(cuid())
  name      String
  address   String
  email     String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  //relation
  owner     User     @relation("userStore",fields: [email], references: [email])   
  ratings    Rating[] @relation("storeRating")
  @@unique([email])
  
}
model Rating{
  id        String      @id @default(cuid())
  value     Int
  userId    String
  storeId   String
  user      User     @relation("userRating",fields: [userId], references: [id])
  store     Store    @relation("storeRating",fields: [storeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([userId, storeId])
 
}
enum Role {
  ADMIN
  USER
  STORE_OWNER
}